<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_12sdp"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/_4sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_12sdp">

        <ImageView
            android:id="@+id/rlOurServices_ivImages"
            android:layout_width="0dp"
            android:layout_height="@dimen/_160sdp"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/rlOurServices_tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:gravity="center"
            android:text=""
            android:textSize="13sp"
            android:textColor="@color/textColorPrimaryDark"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rlOurServices_ivImages"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/rlOurServices_tvContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:gravity="center|start"
            android:text=""
            android:textSize="11sp"
            android:textColor="@color/textColorPrimaryDark"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rlOurServices_tvTitle"
            app:layout_constraintRight_toRightOf="parent"/>

        <LinearLayout
            android:id="@+id/rlOurServices_btnSendMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6sdp"
            android:padding="@dimen/_18sdp"
            android:gravity="center"
            android:background="@drawable/button_effect"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rlOurServices_rlDivider"
            app:layout_constraintRight_toLeftOf="@+id/rlOurServices_rlDivider">

            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/ic_telegram"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:text="@string/activity_our_services_button_send_message"
                android:textSize="11sp"
                android:textColor="@color/textColorPrimaryDark"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlOurServices_rlDivider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_22sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rlOurServices_tvContent"
            app:layout_constraintRight_toRightOf="parent"/>

        <LinearLayout
            android:id="@+id/rlOurServices_btnPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6sdp"
            android:padding="@dimen/_18sdp"
            android:gravity="center"
            android:background="@drawable/button_effect"
            android:orientation="horizontal"
            app:layout_constraintLeft_toRightOf="@+id/rlOurServices_rlDivider"
            app:layout_constraintTop_toTopOf="@+id/rlOurServices_rlDivider"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/ic_contact"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:text="@string/activity_our_services_button_contact"
                android:textSize="11sp"
                android:textColor="@color/textColorPrimaryDark"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>