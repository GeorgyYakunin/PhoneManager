<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_app_intro_second_fragment_background">

    <ImageView
        android:id="@+id/frIntroSecond_ivLogo"
        android:layout_width="@dimen/_132sdp"
        android:layout_height="@dimen/_132sdp"
        android:layout_marginTop="@dimen/_88sdp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_app_intro_second_fragment_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/frIntroSecond_tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_22sdp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/fragment_intro_second_title"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frIntroSecond_ivLogo"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/frIntroSecond_tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_22sdp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/fragment_intro_second_content"
        android:textSize="13sp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frIntroSecond_tvTitle"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>