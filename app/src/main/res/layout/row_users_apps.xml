<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_6sdp"
    android:layout_marginEnd="@dimen/_6sdp"
    android:layout_marginBottom="@dimen/_6sdp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp"
    tools:context=".activities.ActivityBasicAboutDeviceInfo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_6sdp">

        <TextView
            android:id="@+id/rlUserApps_tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6sdp"
            android:gravity="center|start"
            android:text=""
            android:textSize="11sp"
            android:textColor="@color/black_text"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/rlUserApps_tvPackageName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:gravity="center|end"
            android:text=""
            android:textSize="11sp"
            android:textColor="@color/black_text_secondary"
            app:layout_constraintLeft_toRightOf="@+id/rlUserApps_tvAppName"
            app:layout_constraintTop_toTopOf="@+id/rlUserApps_tvAppName"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/rlUserApps_tvAppName"/>

        <TextView
            android:id="@+id/rlUserApps_tvVersionName"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_6sdp"
            android:gravity="center|start"
            android:text="@string/version_name"
            android:textSize="11sp"
            android:textColor="@color/black_text_secondary"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/rlUserApps_tvAppName"
            app:layout_constraintTop_toBottomOf="@+id/rlUserApps_tvAppName"/>

        <TextView
            android:id="@+id/rlUserApps_etVersionName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:gravity="center|end"
            android:textSize="11sp"
            android:textColor="@color/black_text_secondary"
            app:layout_constraintLeft_toRightOf="@+id/rlUserApps_tvVersionName"
            app:layout_constraintTop_toTopOf="@id/rlUserApps_tvVersionName"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/rlUserApps_tvVersionName"/>

        <TextView
            android:id="@+id/rlUserApps_tvVersionCode"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:gravity="center|start"
            android:text="@string/vercion_code"
            android:textSize="11sp"
            android:textColor="@color/black_text_secondary"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/rlUserApps_tvVersionName"
            app:layout_constraintTop_toBottomOf="@+id/rlUserApps_tvVersionName"/>

        <TextView
            android:id="@+id/rlUserApps_etVersionCode"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:gravity="center|end"
            android:textSize="11sp"
            android:textColor="@color/black_text_secondary"
            app:layout_constraintLeft_toRightOf="@+id/rlUserApps_tvVersionCode"
            app:layout_constraintTop_toTopOf="@id/rlUserApps_tvVersionCode"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/rlUserApps_tvVersionCode"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>