<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_3sdp"
    tools:context=".activities.ActivityBasicAboutDeviceInfo">

    <TextView
        android:id="@+id/rlDeviceInfo_tvKey"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_22sdp"
        android:gravity="center|start"
        android:text=""
        android:textSize="11sp"
        android:textColor="@color/black_text"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/rlDeviceInfo_tvValue"
        android:layout_width="0dp"
        android:layout_height="@dimen/_22sdp"
        android:gravity="center|end"
        android:text=""
        android:textSize="11sp"
        android:textColor="@color/black_text_secondary"
        android:lines="1"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/rlDeviceInfo_tvKey"/>

</androidx.constraintlayout.widget.ConstraintLayout>