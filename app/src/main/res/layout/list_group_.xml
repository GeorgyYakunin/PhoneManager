<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/lstGroup_tvPackageName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingLeft="@dimen/_12sdp"
        android:paddingRight="@dimen/_12sdp"
        android:ellipsize="marquee"
        android:gravity="center|start"
        android:singleLine="true"
        android:text="@null"
        android:textSize="11sp"
        android:textColor="@color/black_text_secondary"
        app:layout_constraintRight_toLeftOf="@+id/lstGroup_tvPackageSize"
        app:layout_constraintTop_toTopOf="@+id/lstGroup_tvPackageSize"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/lstGroup_tvPackageSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_12sdp"
        android:paddingStart="@dimen/_12sdp"
        android:paddingTop="@dimen/_12sdp"
        android:paddingRight="@dimen/_12sdp"
        android:paddingEnd="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:gravity="center"
        android:text="@null"
        android:textSize="11sp"
        android:textColor="@color/black_text_secondary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>