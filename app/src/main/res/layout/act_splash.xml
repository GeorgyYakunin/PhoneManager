<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_splash"
    tools:context=".activities.ActivityBasicSplash">

    <ImageView
        android:id="@+id/acSplash_ivLogo"
        android:layout_width="@dimen/_132sdp"
        android:layout_height="@dimen/_132sdp"
        android:src="@drawable/ic_splash"
        android:layout_marginTop="@dimen/_84sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/acSplash_tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:text="@string/activity_splash_text_title"
        android:textSize="35sp"
        android:textColor="@color/white_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acSplash_ivLogo"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/acSplash_tvDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_22sdp"
        android:layout_marginTop="@dimen/_22sdp"
        android:layout_marginRight="@dimen/_22sdp"
        android:gravity="center"
        android:text="@string/activity_splash_text_desc"
        android:textSize="17sp"
        android:textColor="@color/white_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acSplash_tvTitle"
        app:layout_constraintRight_toRightOf="parent"/>

    <ProgressBar
        android:layout_width="@dimen/_48sdp"
        android:layout_height="@dimen/_48sdp"
        android:indeterminateDrawable="@drawable/progress"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acSplash_tvDesc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>