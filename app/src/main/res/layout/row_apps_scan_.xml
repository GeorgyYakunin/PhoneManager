<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_6sdp">

    <ImageView
        android:id="@+id/rlScanApps_ivAppIcon"
        android:layout_width="?android:attr/actionBarSize"
        android:layout_height="?android:attr/actionBarSize"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/rlScanApps_tvAppName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center|start"
        android:layout_marginLeft="@dimen/_6sdp"
        android:layout_marginRight="@dimen/_6sdp"
        android:textSize="11sp"
        android:textColor="@color/textColorPrimaryDark"
        app:layout_constraintLeft_toRightOf="@+id/rlScanApps_ivAppIcon"
        app:layout_constraintTop_toTopOf="@+id/rlScanApps_pbScanLoading"
        app:layout_constraintRight_toLeftOf="@+id/rlScanApps_pbScanLoading"
        app:layout_constraintBottom_toBottomOf="@+id/rlScanApps_pbScanLoading"/>

    <ProgressBar
        android:id="@+id/rlScanApps_pbScanLoading"
        android:layout_width="?android:attr/actionBarSize"
        android:layout_height="?android:attr/actionBarSize"
        android:padding="@dimen/_8sdp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>